<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/imageServerElemStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        app:srcCompat="@drawable/ic_lens_black_12dp" />


    <TextView
        android:id="@+id/textServerElemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ServerName:Port"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/buttonServerElemConnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:backgroundTint="@color/colorBackgroundLight"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />

    <ImageButton
        android:id="@+id/buttonServerElemRemove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:backgroundTint="@color/colorBackgroundLight"
        android:scaleType="fitCenter"
        android:tint="@color/colorDisconnected"
        app:srcCompat="@drawable/ic_remove_black_24dp" />

</LinearLayout>
