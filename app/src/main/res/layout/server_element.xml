<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/clickableAreaServerElemStatus"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageServerElemStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:scaleType="center"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_lens_black_24dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textServerElemName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="ServerName:Port"
        android:textSize="18sp"
        android:gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/buttonServerElemConnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:backgroundTint="@color/colorBackgroundLight"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

    <ImageButton
        android:id="@+id/buttonServerElemRemove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:backgroundTint="@color/colorBackgroundLight"
        android:scaleType="centerInside"
        android:tint="@color/colorDisconnected"
        app:srcCompat="@drawable/ic_remove_black_24dp" />

</LinearLayout>
